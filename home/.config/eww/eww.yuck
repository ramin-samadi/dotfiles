

(defwidget greeter [?text name]
  (box :orientation "horizontal"
       :halign "center"
    text
    (button :onclick 'anime'
      "Greet")))

(defwindow my-widget
           :geometry (geometry :x "0%"
                               :y "0px"
                               :width "100%"
                               :height "37px"
                               :anchor "top center")
           :stacking "fg"
  (greeter :text "Say hello!"
           :name "$USER"))
