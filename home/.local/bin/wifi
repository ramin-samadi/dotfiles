#!/usr/bin/env bash

SELECTED_BSSID=$(nmcli device wifi list | sed -n '1!p' | cut -b 9- | cut -d' ' -f3 | sort | uniq | sed '/--/d' | dmenu -fn "Meslo LGS Nerd Font Mono:size=20:bold" -nb "#1E1E2E" -sb "#313244" -sf "#cdd6f4" -nf "#a6adc8" -p "" | cut -d' ' -f1)

if [[ -z "${SELECTED_BSSID// /}" ]]; then
	exit
else
	PASSWORD_INPUT=$(echo -n "" | dmenu -fn "Meslo LGS Nerd Font Mono:size=20:bold" -nb "#1E1E2E" -sb "#313244" -p "")
fi

if [[ -z "${PASSWORD_INPUT// /}" ]]; then
	exit
else
	nmcli device wifi connect $SELECTED_BSSID password $PASSWORD_INPUT
fi
