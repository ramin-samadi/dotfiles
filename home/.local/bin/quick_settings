#!/usr/bin/env bash

# NOTE: eww

file="/home/$USER/.local/bin/.quick_settings"
status=$(cat "$file")

toggle_quick_settings() {
	if [[ "${status}" = "open" ]]; then
		eww close actions
		status="close"
		echo "${status}" >"$file"
	else
		eww open actions
		status="open"
		echo "${status}" >"$file"
	fi
}

toggle_quick_settings
