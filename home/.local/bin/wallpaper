#!/usr/bin/env bash

SELECTED_WALLPAPER=$(ls /home/$USER/.wallpaper/ | dmenu -fn "Meslo LGS Nerd Font Mono:size=20:bold" -nb "#1E1E2E" -sb "#313244" -sf "#cdd6f4" -nf "#a6adc8" -p "ï€‚ Anime: ")

if [[ -z "${SELECTED_WALLPAPER// /}" ]]; then
	exit
else
	feh --bg-fill /home/$USER/.wallpaper/"$SELECTED_WALLPAPER"
fi
