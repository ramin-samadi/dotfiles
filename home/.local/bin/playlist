#!/bin/bash

options=(
	"1. Nasheed Taweel Alshawq - Ahmed Bukhatir - أحمد بوخاطر - نشيد طويل الشوق"
	"2. Mishary Rashid Alafasy - انيلع ردبلا علط"
	"3. Mishary Rashid Alafasy - هللا الإ هلإ ال"
	"4. Mishary Rashid Alafasy - ىوهلا ماش ىلع يكبأ"
	"5. Mishary Rashid Alafasy - ةخسنلا_دبعلا انا_ ينيد ديشن لمجا"
	"6. Mishary Rashid Alafasy - ىفطصم"
	"7. Mishary Rashid Alafasy - نمحر اي نمحر"
	"8. Quit"
)

selected=$(printf '%s\n' "${options[@]}" | dmenu -fn "Meslo LGS Nerd Font Mono:size=20" -nb "#1E1E2E" -sb "#313244" -p "" -l "${#options[@]}")

case $selected in
"1. Nasheed Taweel Alshawq - Ahmed Bukhatir - أحمد بوخاطر - نشيد طويل الشوق")
	ytfzf -a -m https://youtu.be/o2W8_mvLuxU
	;;
"2. Mishary Rashid Alafasy - انيلع ردبلا علط")
	ytfzf -a -m https://www.youtube/watch?v=r716ZlTWXSU
	;;
"3. Mishary Rashid Alafasy - هللا الإ هلإ ال")
	ytfzf -a -m https://www.youtube.com/watch?v=4yWLofNagy8
	;;
"4. Mishary Rashid Alafasy - ىوهلا ماش ىلع يكبأ")
	ytfzf -a -m https://www.youtube.com/watch?v=BJYKctYt06w
	;;
"5. Mishary Rashid Alafasy - ةخسنلا_دبعلا انا_ ينيد ديشن لمجا")
	ytfzf -a -m https://www.youtube.com/watch?v=JDx4mER0Dww
	;;
"6. Mishary Rashid Alafasy - ىفطصم")
	ytfzf -a -m https://www.youtube.com/watch?v=vfNI24pIEBY
	;;
"7. Mishary Rashid Alafasy - نمحر اي نمحر")
	ytfzf -a -m https://www.youtube.com/watch?v=M3xjz4nxzGQ
	;;
"8. Quit")
	pkill mpv
	;;
esac
