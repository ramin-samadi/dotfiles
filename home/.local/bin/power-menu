#!/usr/bin/env bash

# NOTE: dmenu slås

# Define the options to be displayed in dmenu
options=(
	" lås"
	" logga ut"
	" starta om"
	" stäng av"
	"⏾ strömsparläge"
	"⏼ viloläge"
	" bios/uefi"
)

# Get the user's choice using dmenu
selected=$(printf '%s\n' "${options[@]}" | dmenu -p "")

# Use a case statement to perform the appropriate action based on the user's choice
case "$selected" in
" lås")
	slock
	;;
" logga ut")
	pkill dwm
	;;
" starta om")
	systemctl reboot
	;;
" stäng av")
	systemctl poweroff
	;;
"⏾ strömsparläge")
	systemctl suspend
	;;
"⏼ viloläge")
	systemctl hibernate
	;;
" bios/uefi")
	systemctl reboot --firmware-setup
	;;
esac
