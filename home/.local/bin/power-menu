#!/usr/bin/env bash

# NOTE: dmenu slock

# Define the OPTIONS to be displayed in dmenu
OPTIONS=(
	" lock"
	" logout"
	" reboot"
	" shutdown"
	"⏾ suspend"
	"⏼ hibernate"
	" bios/uefi"
)

# Get the user's choice using dmenu
SELECTED=$(printf '%s\n' "${OPTIONS[@]}" | dmenu -fn "Meslo LGS Nerd Font Mono:size=20:bold" -nb "#1E1E2E" -sb "#313244" -sf "#cdd6f4" -nf "#a6adc8" -p "")

# Use a case statement to perform the appropriate action based on the user's choice
case "$SELECTED" in
" lock")
	slock
	;;
" logout")
	pkill dwm
	;;
" reboot")
	systemctl reboot
	;;
" shutdown")
	systemctl poweroff
	;;
"⏾ suspend")
	systemctl suspend
	;;
"⏼ hibernate")
	systemctl hibernate
	;;
" bios/uefi")
	systemctl reboot --firmware-setup
	;;
esac
