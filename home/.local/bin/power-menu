#!/usr/bin/env bash

# NOTE: dmenu slås

# Define the OPTIONS to be displayed in dmenu
OPTIONS=(
	" lås"
	" logga ut"
	" omstart"
	" shutdown"
	"⏾ suspend"
	"⏼ hibernate"
	" bios/uefi"
)

# Get the user's choice using dmenu
SELECTED=$(printf '%s\n' "${OPTIONS[@]}" | dmenu -p "")

# Use a case statement to perform the appropriate action based on the user's choice
case "$SELECTED" in
" lås")
	slock
	;;
" logga ut")
	pkill dwm
	;;
" omstart")
	systemctl reboot
	;;
" shutdown")
	systemctl poweroff
	;;
"⏾ suspend")
	systemctl suspend
	;;
"⏼ hibernate")
	systemctl hibernate
	;;
" bios/uefi")
	systemctl reboot --firmware-setup
	;;
esac
