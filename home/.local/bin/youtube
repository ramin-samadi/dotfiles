#!/usr/bin/env bash

channels=(
	"Chris Titus Tech"
	"DistroTube"
	"Brodie"
	"Bugswriter"
	"Mental Outlaw"
)

selected=$(printf '%s\n' "${channels[@]}" | dmenu -p "Search YouTube: " -l "${#channels[@]}")

# Open a terminal and execute the ytfzf -t command
if [[ -z "${selected// /}" ]]; then
	exit
else
	alacritty -e bash -c "ytfzf -t \"$selected\"; exec bash"
fi
