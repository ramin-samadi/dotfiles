#!/usr/bin/env bash

# NOTE: dmenu st

terminal="st"

channels=(
	"Chris Titus Tech"
	"DistroTube"
	"Brodie"
	"Bugswriter"
	"Mental Outlaw"
)

selected_channel=$(printf '%s\n' "${channels[@]}" | dmenu -p "ï…ª")

execute_ytfzf() {
	"$1" -e bash -c "ytfzf -t -l \"$2\" && pkill -P $$"
}

# Open a terminal and execute the ytfzf -t command
if [[ -z "${selected_channel// /}" ]]; then
	exit
else
	execute_ytfzf "$terminal" "$selected_channel"
fi
