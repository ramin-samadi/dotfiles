#!/usr/bin/env bash

channels=(
	"Chris Titus Tech"
	"DistroTube"
	"Brodie"
	"Bugswriter"
	"Mental Outlaw"
)

selected=$(printf '%s\n' "${channels[@]}" | dmenu -fn "Meslo LGS Nerd Font Mono:size=20:bold" -nb "#1E1E2E" -sb "#313244" -sf "#cdd6f4" -nf "#a6adc8" -p "ï…ª")

# Open a terminal and execute the ytfzf -t command
if [[ -z "${selected// /}" ]]; then
	exit
else
	st -e bash -c "ytfzf -t -l \"$selected\" && kill -9 \$PPID"
fi
