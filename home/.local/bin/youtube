#!/usr/bin/env bash

# NOTE: dmenu st

TERMINAL="st"

CHANNELS=(
	"Chris Titus Tech"
	"DistroTube"
	"Brodie"
	"Bugswriter"
	"Mental Outlaw"
)

SELECTED_CHANNEL=$(printf '%s\n' "${CHANNELS[@]}" | dmenu -fn "Meslo LGS Nerd Font Mono:size=20:bold" -nb "#1E1E2E" -sb "#313244" -sf "#cdd6f4" -nf "#a6adc8" -p "ï…ª")

execute_ytfzf() {
	"$1" -e bash -c "ytfzf -t -l \"$2\" && pkill -P $$"
}

# Open a terminal and execute the ytfzf -t command
if [[ -z "${SELECTED_CHANNEL// /}" ]]; then
	exit
else
	execute_ytfzf "${TERMINAL}" "${SELECTED_CHANNEL}"
fi
