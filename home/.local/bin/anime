#!/bin/bash

TERMINAL="st"
ANIME_NAME=$(echo -n "" | dmenu -fn "Meslo LGS Nerd Font Mono:size=20:bold" -nb "#1E1E2E" -sb "#313244" -sf "#cdd6f4" -nf "#a6adc8" -p "ï€‚ Anime: ")

execute_ani_cli() {
	"$1" -e bash -c "ani-cli \"$2\" && pkill -P $$"
}

if [[ -z "${ANIME_NAME// /}" ]]; then
	exit
else
	execute_ani_cli "${TERMINAL}" "${ANIME_NAME}"
fi
