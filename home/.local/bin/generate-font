#!/bin/bash

if [[ "$1" == "--block" || "$1" == "-b" ]]; then
	generate-font "$2" | grep "â–‘" | tail -n 3
else
	find /usr/share/figlet -type f \( -name "*.flf" -o -name "*.tlf" \) -exec sh -c '
    font=$(basename "$0" | sed "s/\.[^\.]*$//")
    toilet -f "$font" "${1}"  2>/dev/null
  ' {} "${1}" \;
fi
