#!/bin/bash

# NOTE: git pacman

cd ~/GitHub/dwm && git pull
rm -rf ~/GitHub/dwm/home/.local/bin/* && cp -r ~/.local/bin/* ~/GitHub/dwm/home/.local/bin/
rm -rf ~/GitHub/dwm/home/.bashrc && cp -r ~/.bashrc ~/GitHub/dwm/home/
rm -rf ~/GitHub/dwm/home/.alias && cp -r ~/.alias ~/GitHub/dwm/home/
rm -rf ~/GitHub/dwm/home/.keybinds && cp -r ~/.keybinds ~/GitHub/dwm/home/
rm -rf ~/GitHub/dwm/home/.config/dwm/ && cp -r ~/.config/dwm/ ~/GitHub/dwm/home/.config/
rm -rf ~/GitHub/dwm/home/.config/dmenu/ && cp -r ~/.config/dmenu/ ~/GitHub/dwm/home/.config/
rm -rf ~/GitHub/dwm/home/.config/btop/ && cp -r ~/.config/btop/ ~/GitHub/dwm/home/.config/
rm -rf ~/GitHub/dwm/home/.config/calcurse/ && cp -r ~/.config/calcurse/ ~/GitHub/dwm/home/.config/
rm -rf ~/GitHub/dwm/home/.config/dunst/ && cp -r ~/.config/dunst/ ~/GitHub/dwm/home/.config/
rm -rf ~/GitHub/dwm/home/.config/st/ && cp -r ~/.config/st/ ~/GitHub/dwm/home/.config/
rm -rf ~/GitHub/dwm/home/.config/alacritty/ && cp -r ~/.config/alacritty/ ~/GitHub/dwm/home/.config/
rm -rf ~/GitHub/dwm/home/.config/nvim/ && cp -r ~/.config/nvim/ ~/GitHub/dwm/home/.config/
rm -rf ~/GitHub/dwm/home/.config/eww/ && cp -r ~/.config/eww/ ~/GitHub/dwm/home/.config/
rm -rf ~/GitHub/dwm/home/.config/picom/ && cp -r ~/.config/picom/ ~/GitHub/dwm/home/.config/
rm -rf ~/GitHub/dwm/home/.config/slstatus/ && cp -r ~/.config/slstatus/ ~/GitHub/dwm/home/.config/
rm -rf ~/GitHub/dwm/home/.xinitrc && cp -r ~/.xinitrc ~/GitHub/dwm/home/
rm -rf ~/GitHub/dwm/home/.bash_profile && cp -r ~/.bash_profile ~/GitHub/dwm/home/
/home/ramin/.local/bin/pass-update
pacman -Qqe >~/GitHub/dwm/packages.txt
git add . && git commit -m "automated update" && git push
